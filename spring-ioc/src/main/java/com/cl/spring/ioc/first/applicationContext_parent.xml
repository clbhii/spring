<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="itemDao" class="com.cl.spring.ioc.first.dao.ItemDaoImpl"/>
	<bean id="orderDao" class="com.cl.spring.ioc.first.dao.OrderDaoImpl"/>
	<bean id="orderDao1" class="com.cl.spring.ioc.first.dao.OrderDaoImpl"/>
	<bean id="orderDao2" class="com.cl.spring.ioc.first.dao.OrderDaoImpl"/>
	
	
	<bean abstract="true" id="storeServiceTemplate" class="com.cl.spring.ioc.first.service.StoreServiceImpl">
		<property name="itemDao">
			<ref bean="itemDao"/>
		</property>
	</bean>
	<bean id="storeService" parent="storeServiceTemplate">		
		<property name="orderDao">
			<ref bean="orderDao"/>
		</property>
	</bean>
	
	<bean id="storeService1" parent="storeServiceTemplate">		
		<property name="orderDao">
			<ref bean="orderDao1"/>
		</property>
	</bean>
	
</beans>